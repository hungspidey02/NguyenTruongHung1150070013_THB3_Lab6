<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/custom_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="top|center_horizontal"
    android:padding="16dp"
    android:background="#FFF8FF">


    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Custom Button"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#FF0000"
        android:layout_marginBottom="8dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Selectors"
            android:textSize="12sp"
            android:textStyle="italic" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Shapes+Selectors"
            android:textSize="12sp"
            android:textStyle="italic" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="8dp">

        <Button
            android:id="@+id/btnColoredSelector"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="COLORED SELECTOR"
            android:textAllCaps="true"
            android:textSize="12sp"
            android:textColor="#000000"
            android:background="@drawable/btn_colored_selector" />

        <Button
            android:id="@+id/btnRoundShape"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:text="ROUND SHAPE"
            android:textAllCaps="true"
            android:textSize="12sp"
            android:textColor="#000000"
            android:background="@drawable/shape_round" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="8dp">

        <Button
            android:id="@+id/btnColoredSelectorDisabled"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="COLOR SELECTOR\nDISABLED"
            android:textAllCaps="true"
            android:textSize="11sp"
            android:textColor="#000000"
            android:enabled="false"
            android:background="@drawable/btn_colored_selector_disabled" />

        <Button
            android:id="@+id/btnShapeGradient"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:text="SHAPE WITH GRADIENT"
            android:textAllCaps="true"
            android:textSize="11sp"
            android:textColor="#000000"
            android:background="@drawable/shape_gradient" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="8dp">

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <Button
            android:id="@+id/btnSelectorShape"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="SELECTOR SHAPE"
            android:textAllCaps="true"
            android:textSize="11sp"
            android:textColor="#FFFFFF"
            android:background="@drawable/selector_shape" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="16dp">

        <ImageButton
            android:id="@+id/imgHappy"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:background="@drawable/emoji_bg"
            android:src="@drawable/ic_smile_happy"
            android:scaleType="centerInside"
            android:contentDescription="@string/app_name" />

        <ImageButton
            android:id="@+id/imgSad"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/emoji_bg"
            android:src="@drawable/ic_smile_sad"
            android:scaleType="centerInside"
            android:contentDescription="@string/app_name" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="24dp">

        <Button
            android:id="@+id/btnBackMoney"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Quay về đổi tiền" />

        <Button
            android:id="@+id/btnGoLength"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:text="Sang đổi độ dài" />
    </LinearLayout>

</LinearLayout>
